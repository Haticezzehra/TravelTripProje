@using TravelTripProje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumListesi</h2>
<table class=" table table-bordered">
    <tr>
        <td>ID</td>
        <td>Kullanıcı</td>
        <td>Mail</td>
        <td>Yorum</td>
        <td>Blog</td>
        <td>Sil</td>
        <td>Güncelle</td>

    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.ID</td>
    <td>@x.KullaniciAdi</td>
    <td>@x.Mail</td>
    <td>@x.Yorum</td>
    <td>@x.BlogID</td>
    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-link">Güncelle</a></td>

</tr>
    }
</table>

